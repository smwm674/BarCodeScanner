<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient"
    tools:context=".fragments.ScanedText">

    <androidx.cardview.widget.CardView
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/spacing_medium"
        card_view:cardCornerRadius="@dimen/spacing_medium"
        card_view:cardElevation="0dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/spacing_medium">

            <ImageView
                android:id="@+id/image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerInParent="true"
                android:layout_marginLeft="@dimen/spacing_medium"
                android:layout_marginRight="@dimen/spacing_medium"
                android:minWidth="@dimen/spacing_xlarge"
                android:minHeight="@dimen/spacing_xlarge"
                card_view:srcCompat="@drawable/ic_code" />

            <TextView
                android:id="@+id/date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/spacing_medium"
                android:layout_marginRight="@dimen/spacing_medium"
                android:layout_toLeftOf="@+id/fav"
                android:layout_toRightOf="@+id/image"
                android:textAppearance="?android:textAppearanceSmall" />

            <TextView
                android:id="@+id/text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/date"
                android:layout_marginLeft="@dimen/spacing_medium"
                android:layout_marginRight="@dimen/spacing_medium"
                android:layout_toLeftOf="@+id/fav"
                android:layout_toRightOf="@+id/image"
                android:textAppearance="?android:textAppearanceSmall" />

            <ImageView
                android:id="@+id/fav"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerInParent="true"
                android:minWidth="@dimen/spacing_mxlarge"
                android:minHeight="@dimen/spacing_mxlarge"
                card_view:srcCompat="@drawable/ic_unfavourite" />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/center"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/lookup"
        android:layout_below="@+id/main"
        android:layout_margin="@dimen/spacing_medium"
        card_view:cardCornerRadius="@dimen/spacing_medium"
        card_view:cardElevation="0dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/spacing_medium"
                android:textAppearance="?android:textAppearanceMedium"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/information"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/spacing_xlarge"
                android:textAppearance="?android:textAppearanceMedium"
                android:textStyle="normal" />
            <!--android:textColor="@color/indigo_A200"-->
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <Button
        android:id="@+id/lookup"
        style="@style/KayfButton.primary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:layout_marginBottom="@dimen/actionBarSize"
        android:minWidth="@dimen/viewWidth"
        android:padding="@dimen/spacing_medium"
        android:text="@string/browser"
        android:textAppearance="?android:textAppearanceMedium" />
    <!-- android:drawableLeft="@drawable/ic_search"-->

</RelativeLayout>